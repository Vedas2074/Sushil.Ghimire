@{
    ViewData["Title"] = "Department Store";
}

@model List<Department>
<h1>Department Store</h1><br>
<h3><a class="btn btn-outline-primary float-right" href="/department/Add">Add Department</a></h3>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Items ID</th>
            <th scope="col">Items Name</th>
            <th scope="col">Price</th>
            <th scope="col">Status</th>
            <th scope="col">Quantity</th>
            <th></th>
            <th></th>

        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td scope="row">@item.ItemId</td>
                <td>
                    <a href="/department/details?id=@item.ItemId">@item.ItemName</a>
                </td>
                <td>@item.Price</td>
                <td>@item.Status</td>
                <td>@item.Quantity</td>
                <td><a href="/department/Edit?id=@item.ItemId" class="btn btn-primary">Edit</a></td>
                <td><a href="/department/Delete?id=@item.ItemId" class="btn btn-danger">Delete</a></td>
            </tr>

        </tbody>
    }
</table>
