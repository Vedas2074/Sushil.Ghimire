@model Department
@{
    ViewData["Title"] = "Modify Department";
}
<h1 class="text-center">Update Department</h1>
<hr>
<form asp-controller="Department" asp-action="Edit" method="POST">
    <div class="mb-3">
        <input type="hidden" asp-for="ItemId"/>
        <label asp-for="ItemName" class="form-label">Item Name</label>
        <input type="text" class="form-control" asp-for="ItemName">
        <span class="badge badge-danger" asp-validation-for="ItemName"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label">Item Price</label>
        <input type="number" class="form-control" asp-for="Price" min="0" step="0.1">
        <span class="badge badge-danger" asp-validation-for="Price"></span>

    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="Status" asp-for="Status" value="Y">
        <label class="form-check-label" asp-for="Status">Yes</label>
        

    </div>
    <span class="badge badge-danger" asp-validation-for="Status"></span>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="Status" asp-for="Status" value="N">
        <label class="form-check-label" asp-for="Status">No</label>
    </div>
    <div class="mb-3">
        <label asp-for="Quantity" class="form-label">Quantity</label>
        <input type="number" class="form-control" asp-for="Quantity">
    </div>
    <button type="submit" class="btn btn-primary">Update Department</button>
</form>