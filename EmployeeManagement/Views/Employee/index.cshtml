@{
    ViewData["Title"] = "Employee List ";
}

@model List<Employee>
<h1>List of Employees</h1><br>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">FirstName</th>
            <th scope="col">LastName</th>
            <th scope="col">Adderess</th>
            <th scope="col">Age</th>
            <th scope="col">Salary</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody>

            <tr>
                <th scope="row">@item.Id</th>
                <td>
                    <a href="/employee/detail?id=@item.Id">@item.FirstName</a>
                </td>
                <td>@item.LastName</td>

                <td>@item.Address</td>
                <td>@item.Age</td>
                <td>@item.Salary</td>
                <td><a class="btn btn-outline-primary" href="/Employee/Edit?id=@item.Id">Edit</a></td>
                <td><a class="btn btn-outline-danger" href="/Employee/Delete?id=@item.Id">Delete</a></td>


            </tr>

        </tbody>
    }

</table>
