@model Employee
@{
    ViewData["Title"] = "Update Employee";
}
<h1 class="text-center">Update Employee</h1>
<hr>
<form asp-controller="Employee" asp-action="Edit" method="POST">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <!--asp tag helper automatically render firstname-->
        <span class="text-danger" asp-validation-for="FirstName"></span>
        <input type="text" class="form-control" asp-for="FirstName" placeholder="Enter first name">
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <span class="text-danger" asp-validation-for="FirstName"></span>
        <input type="text" class="form-control" asp-for="LastName" placeholder="Enter last name">
    </div>
    <div class="form-group">
        <label asp-for="Address">Address:</label>
        <input type="text" class="form-control" asp-for="Address" placeholder="Enter Address">
    </div>
    <div class="form-group">
        <label asp-for="Age">Age:</label>
        <input type="number" class="form-control" asp-for="Age" placeholder="Enter Age">
    </div>
    <div class="form-group">
        <label asp-for="Salary">Salary:</label>
        <input type="number" class="form-control" asp-for="Salary" placeholder="Enter Salary">
    </div>

    <button type="submit" class="btn btn-primary">Update Employee</button>
</form>